                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="control-label">@Localizer["Bank Account Name"]</label>
                                            <p class="form-control-static" data-codmember-name="bankAccountName">-</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @* Bank Info *@
