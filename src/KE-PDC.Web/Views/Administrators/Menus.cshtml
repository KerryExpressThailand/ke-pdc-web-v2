                                <label for="inputPagesLinkText" class="col-sm-3 control-label">Link Text</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputPagesLinkText" name="LinkText" required>
                                </div>
                            </div>
                            <div class="form-group">
