@model TypeBranchDateFromDateToViewModel

<div class="card">
    <div class="card-header">
        <h2 class="card-title">@SharedLocalizer["Search"]</h2>
    </div>
    <div class="card-body card-padding">
        <form id="form-search">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">@SharedLocalizer["Branch type"]</label>
                        <select asp-for="BranchType" class="selectpicker" data-ke-action="branch-type-list" data-ke-target="#Branch" data-width="100%" data-live-search="true" data-actions-box="true" title="@SharedLocalizer["Select branch type"]" multiple required disabled>
                            <option value="-1" selected>Loading...</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">@SharedLocalizer["Region"]</label>
                        <select asp-for="Region" class="selectpicker text-uppercase" data-width="100%" data-live-search="true" data-actions-box="true" title="@SharedLocalizer["Select Region"]" multiple></select>
                    </div>
                </div>
      
            </div>
           @*region*@
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["Branch"]</label>
                    <select asp-for="BranchList" class="selectpicker" multiple data-width="100%" data-live-search="true" data-actions-box="true" title="@SharedLocalizer["Select branch"]" required disabled></select>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["Discount Type"]</label>
                    <select asp-for="DiscountType" class="selectpicker" multiple data-width="100%" data-live-search="true" data-actions-box="true" title="@SharedLocalizer["Select Discount"]" required ></select>
                </div>
            </div>

        </div>
            @*/////////*@
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">@SharedLocalizer["Date from"]</label>
                        <div class="input-group-icon">
                            <span class="input-group-addon-icon"><i class="ion-calendar"></i></span>
                            <input asp-for="DateFrom" id="SearchDateFrom" class="form-control input-mask" data-mask="00/00/0000" value="@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy", new CultureInfo("en-US"))">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label">@SharedLocalizer["Date to"]</label>
                        <div class="input-group-icon">
                            <span class="input-group-addon-icon"><i class="ion-calendar"></i></span>
                            <input asp-for="DateTo" id="SearchDateTo" class="form-control input-mask" data-mask="00/00/0000" value="@DateTime.Now.ToString("dd/MM/yyyy", new CultureInfo("en-US"))">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                
                <div class="col-sm-12 text-right">
                    <div class="form-group">
                        <div>
                            <button type="reset" class="btn btn-default" data-toggle="tagsinput-clear" data-target="#form-search .tagsinput">@SharedLocalizer["Clear"]</button>
                             <button type="submit" id="search" class="btn btn-primary btn-search">@SharedLocalizer["Search"]</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>